<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.converter.dlong.mill_turn_converter.MainActivity"
    android:background="@color/backgroundGray">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="thou/revolution:"
        android:id="@+id/textViewRevLabel"
        android:textColor="@color/textWhite"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_border">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X:"
            android:id="@+id/textViewXRev"
            android:textColor="@color/textWhite"
            android:textSize="32dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editTextXRev"
                android:background="@color/backGroundBlack"
                android:layout_weight="1"
                android:text="62.5"
                android:textColor="@color/textDigitalGreen"
                android:textSize="32dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="inch"
                android:id="@+id/buttonRevUnit"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:textColor="@color/textDigitalGreen"
                android:background="@color/backGroundBlack"
                android:paddingLeft="30dp"
                android:paddingBottom="18dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y:"
                android:id="@+id/textViewYRev"
                android:textColor="@color/textWhite"
                android:textSize="32dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editTextYRev"
                android:background="@color/backGroundBlack"
                android:layout_weight="1"
                android:text="62.5"
                android:textColor="@color/textDigitalGreen"
                android:textSize="32dp"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="edge finder diameter:"
        android:id="@+id/textViewEdgeFinderLabel"
        android:textColor="@color/textWhite"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_border">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editTextEdgeFinderDia"
                android:background="@color/backGroundBlack"
                android:layout_weight="1"
                android:text="0.200"
                android:textColor="@color/textDigitalGreen"
                android:paddingLeft="0dp"
                android:textSize="32dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="inch"
                android:id="@+id/buttonFinderUnit"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:textColor="@color/textDigitalGreen"
                android:background="@color/backGroundBlack"
                android:paddingLeft="30dp"
                android:paddingBottom="25dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="distance:"
        android:id="@+id/textViewDistanceLabel"
        android:textColor="@color/textWhite"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_border">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X:"
                android:id="@+id/textViewXDistance"
                android:textColor="@color/textWhite"
                android:textSize="32dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:inputType="numberDecimal"
                android:text="0"
                android:ems="10"
                android:background="@color/backGroundBlack"
                android:id="@+id/editTextXDistance"
                android:layout_weight="1"
                android:textColor="@color/textDigitalGreen"
                android:textSize="32dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="inch"
                android:id="@+id/buttonDistanceUnit"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:textColor="@color/textDigitalGreen"
                android:background="@color/backGroundBlack"
                android:paddingLeft="30dp"
                android:paddingBottom="18dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y:"
                android:id="@+id/textViewYDistance"
                android:textColor="@color/textWhite"
                android:textSize="32dp"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="numberDecimal"
                android:text="0"
                android:ems="10"
                android:background="@color/backGroundBlack"
                android:id="@+id/editTextYDistance"
                android:layout_weight="1"
                android:textColor="@color/textDigitalGreen"
                android:textSize="32dp"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:background="@color/textLightGray"
        android:id="@+id/buttonConvert" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_border">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X:"
                android:id="@+id/textViewXTurn"
                android:textColor="@color/textRedLight"
                android:textSize="32dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/textViewXTurnsLabel"
                android:background="@color/backGroundBlack"
                android:text=" TRN "
                android:textColor="@color/textDigitalGreen"
                android:textSize="32dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/textViewXTurnsValue"
                android:background="@color/backGroundBlack"
                android:text="0"
                android:textColor="@color/textDigitalGreen"
                android:textSize="32dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/textViewXRemainderLabel"
                android:background="@color/backGroundBlack"
                android:text="  REM "
                android:textColor="@color/textDigitalGreen"
                android:textSize="32dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/textViewXRemainderValue"
                android:background="@color/backGroundBlack"
                android:text="0"
                android:textColor="@color/textDigitalGreen"
                android:textSize="32dp"
                android:gravity="center" />


            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="inch"
                android:id="@+id/buttonRemainderUnit"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:textColor="@color/textDigitalGreen"
                android:background="@color/backGroundBlack"
                android:gravity="top|right"
                android:paddingRight="10dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y:"
                android:id="@+id/textViewYTurn"
                android:textColor="@color/textRedLight"
                android:textSize="32dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/textViewYTurnsLabel"
                android:background="@color/backGroundBlack"
                android:text=" TRN "
                android:textColor="@color/textDigitalGreen"
                android:textSize="32dp"
                android:gravity="left|center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:inputType="numberDecimal"
                android:id="@+id/textViewYTurnsValue"
                android:background="@color/backGroundBlack"
                android:text="0"
                android:textColor="@color/textDigitalGreen"
                android:textSize="32dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/textViewYRemainderLabel"
                android:background="@color/backGroundBlack"
                android:text="  REM "
                android:textColor="@color/textDigitalGreen"
                android:textSize="32dp"
                android:gravity="center" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/textViewYRemainderValue"
                android:background="@color/backGroundBlack"
                android:text="0"
                android:textColor="@color/textDigitalGreen"
                android:textSize="32dp"
                android:gravity="left|center" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
